{
    "id": "bt4g",
    "name": "BT4G Audio",
    "version": "1.1.0",
    "providerType": "api",
    "description": "BT4G torrent search with audio category filter and file list detection",
    "search": {
        "url": "https://bt4gprx.com/search?q={query}&category=audio",
        "method": "GET",
        "headers": {
            "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
        },
        "responseType": "html",
        "resultSelector": "<div[^>]*class=[\"']search-ret[\"'][^>]*>([\\s\\S]*?)<\\/div>",
        "fields": {
            "title": "<h5[^>]*>\\s*<a[^>]*title=[\"'][^\"']+[\"'][^>]*>([^<]+)<\\/a>",
            "size": "<span[^>]*>Size[^<]*<\\/span>\\s*<span[^>]*>([^<]+)<\\/span>",
            "seeds": "id=[\"']seeders[\"'][^>]*>(\\d+)",
            "peers": "id=[\"']leechers[\"'][^>]*>(\\d+)",
            "detailUrl": "<a[^>]*class=[\"'][^\"']*btn-primary[^\"']*[\"'][^>]*href=[\"']([^\"']+)[\"']",
            "filePreview": "ul.files li"
        },
        "pagination": {
            "type": "page",
            "param": "page"
        }
    },
    "detailPage": {
        "buildMagnetFromHash": true,
        "magnetLinkSelector": "a[href*='/hash/']",
        "infoHashPattern": "(?:/hash/|infohash=|xt=urn:btih:)([a-fA-F0-9]{40})",
        "headers": {
            "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
        }
    },
    "notes": [
        "BT4G shows first 3 files in search results - use filePreview for archive detection",
        "Changed from RSS to HTML to access file list",
        "If filePreview contains .rar/.zip/.7z, warn user before selection",
        "Audio category filter applied in URL"
    ],
    "archiveDetection": {
        "enabled": true,
        "field": "filePreview",
        "archiveExtensions": [
            ".rar",
            ".zip",
            ".7z",
            ".tar",
            ".gz"
        ],
        "warnOnArchive": true
    }
}