{
    "id": "bt4g",
    "name": "BT4G Audio",
    "version": "1.3.0",
    "providerType": "api",
    "description": "BT4G torrent search with audio category filter - Updated Jan 2026",
    "search": {
        "url": "https://bt4gprx.com/search?q={query}&category=audio",
        "method": "GET",
        "headers": {
            "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
        },
        "responseType": "html",
        "resultSelector": "<div[^>]*result-item[^>]*>([\\s\\S]*?)<\\/div>\\s*<\\/div>",
        "fields": {
            "title": "<h5[^>]*>\\s*<a[^>]*>([^<]+)<\\/a>",
            "size": "cpill[^>]*>([0-9.]+\\s*[GMKT]B)",
            "seeds": "id=[\"']seeders[\"'][^>]*>(\\d+)",
            "peers": "id=[\"']leechers[\"'][^>]*>(\\d+)",
            "detailUrl": "href=[\"'](\\/magnet\\/[^\"']+)[\"']"
        },
        "pagination": {
            "type": "page",
            "param": "page"
        }
    },
    "detailPage": {
        "buildMagnetFromHash": true,
        "magnetLinkSelector": "a.btn-primary",
        "infoHashPattern": "(?:/hash/|btih:)([a-fA-F0-9]{40})",
        "headers": {
            "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
        }
    },
    "notes": [
        "v1.3 - Simplified regex patterns",
        "detailUrl: just match href=/magnet/...",
        "title: h5 > a > text",
        "size: cpill class followed by size value",
        "seeds/peers: by id attribute"
    ]
}